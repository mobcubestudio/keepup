<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:id="@+id/linha_meu_veiculo_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tv_tipo_reparo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tv_falta_reparo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/cor_primaria"
                android:textSize="17dp"
                android:layout_alignParentRight="true"

                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_km_reparo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="nome do veiculo" />

        <TextView
            android:id="@+id/tv_km_duracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="nome do veiculo" />

        <TextView
            android:id="@+id/tv_data_reparo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="15/10/2021"
            android:layout_marginBottom="15dp"
            />


        <RelativeLayout
            android:id="@+id/rl_progressao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/coracao_cheio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_novo"

                />


            <View
                android:id="@+id/vw_percentual"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/coracao_vazio"
                android:layout_toEndOf="@+id/coracao_cheio"

                android:background="@drawable/barra_progressao_level"
                android:src="@drawable/ic_novo" />


            <ImageView
                android:id="@+id/coracao_vazio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_velho" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_progressao_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_km_inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="0"
                android:textSize="9dp"
                android:layout_marginStart="4dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/tv_km_inicial"
                >


            <TextView
                android:id="@+id/tv_km_percorrido"
                android:layout_width="match_parent"
                android:layout_height="12dp"

                android:text="521"
                android:textSize="9dp"

                />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_km_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="1500"
                android:textSize="9dp" />

        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>